<%= render 'layouts/messages' %>
<h2>Blog List</h2>
<div class="row">
	<div class="col-md-8 col-md-offset-2">

		<table class="table table-hover">
			<thead>
				<th>Title</th>
				<th>Author</th>
				<th>Created On</th>
			</thead>
			<tbody>

				<% @posts.each do |posts| %>
				<tr>
					<td><%= posts.title %></td>
					<td><%= posts.author %></td>
					<td><%= posts.created_at %></td>
					<td><%= link_to 'View', post_path(id: posts.id), class:"btn btn-info btn-xs" %></td>
					<td><%= link_to 'Delete', post_path(id:posts.id), method: :delete, onclick: "return confirm('Are you sure?');", class:"btn btn-danger btn-xs" %></td>
				</tr>
				<% end %>

			</tbody>
		</table>
		<%= link_to 'Create New Post', new_post_path, class: "btn btn-primary" %> 
	</div>
</div>