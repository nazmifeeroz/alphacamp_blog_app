<h2>Blog List</h2>

<table>
	<thead>
		<th>Title</th>
		<th>Author</th>
		<th>Created On</th>
	</thead>
	<tbody>

		<% @posts.each do |posts| %>
		<tr>
			<td><%= posts.title %></td>
			<td><%= posts.author %></td>
			<td><%= posts.created_at %></td>
			<td><%= link_to 'View', post_path(id: posts.id) %></td>
			<td><%= link_to 'Delete', post_path(id:posts.id), method: :delete, onclick: "return confirm('Are you sure?');" %></td>
		</tr>
		<% end %>

	</tbody>
</table>

<%= link_to 'Create Post', new_post_path %>