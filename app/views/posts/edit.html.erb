<%= form_for @post, url: post_path(id: @post.id), method: :put do |f| %>

	<div>
		<%= f.label :title %>
		<%= f.text_field :title %>
	</div>
	
	<div>
		<%= f.label :author %>
		<%= f.text_field :author %>	
	</div>
	
	<div>
		<%= f.label :content %>
		<%= f.text_area :content %>	
	</div>
	
	<div>
		<%= f.submit "Update" %>	
	</div>
	
<% end %>

<%= link_to 'Back to post', post_path(id:@post.id) %>